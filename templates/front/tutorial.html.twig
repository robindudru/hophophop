{% extends 'base.html.twig' %}

{% block title %}{{ tutorial.title }}{% endblock %}

{% block pageheader %}{{ include('front/components/pageheader.html.twig') }}{% endblock %}

{% block body %}
<div class="row no-gutters recipe-wrapper mb-5">
    <section class="col-9 main-recipe px-5">
       <h1 class="mb-5"><b>{{tutorial.title}}</b></h1>
       {{tutorial.content|raw}}
    </section>

    <aside class="col-3 side-recipe px-3">
        <div class="row">
            <div class="col-2">
                <div class="recipe-avatar">
                    <img src="{{asset('build/avatars/')}}{{tutorial.author.avatar|default('default.png')}}" alt="Avatar de {{tutorial.author.username}}" />
                </div>
            </div>
            <div class="col-10 pl-4">
                <h2 class="fs-2 collegier mb-0">{{tutorial.author.username}}</h2>
                {% if user is not null and 'ROLE_BIERROT_GOURMAND' in user.roles %}
                <div class="row pl-3">
                        <a href="{{path('edit_tutorial', {'id': tutorial.id})}}"><span class="badge badge-info mr-3">EDITER</span></a>
                        <a href="{{path('delete_tutorial', { 'id': tutorial.id }) }}"><span class="badge badge-danger">SUPPRIMER</span></a>
                </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            
        </div>
    </aside>
</div>
{% endblock %}