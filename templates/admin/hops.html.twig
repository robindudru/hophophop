{% extends 'base.html.twig' %}

{% block title %}Houblons{% endblock %}

{% block body %}
<div class="main-container admin-home">
<div class="row">
    <div class="row d-lg-none">
        {{ include('admin/components/top-menu.html.twig') }}
    </div>
    <div class="col-12 col-lg-10">
        <div class="row mt-5">
            <h2 class="collegier fs-2 subtitle"><span class="mr-2">liste</span><span class="mr-2">des</span>houblons</h2>
        </div>
        {% if hops is not empty %}
        <div class="row no-gutters my-3 malts-header">
            <div class="col-1">
            </div>
            <div class="col-4">
                <b>Nom</b>
            </div>
            <div class="col-2">
                <b>Type</b>
            </div>
            <div class="col-2">
                <b><span class="d-none d-lg-inline">Valeur </span>AA</b>
            </div>
            <div class="col-3">
                <span class="d-none d-lg-inline"><b>Commander</b> </span><i class="fas fa-shopping-cart"></i>
            </div>
        </div>
        {% for hop in hops %}
        <div class="row no-gutters">
            <div class="col-1">
                <a href="{{ path('edit_hop', {'id': hop.id} ) }}" title="Editer"><i class="fas fa-edit mr-2"></i></a>
            </div>
            <div class="col-4">
                {{ hop.name }}
            </div>
            <div class="col-3 col-lg-2">
                {{ hop.type.name }}
            </div>
            <div class="col-1 col-lg-2">
                {{ hop.alphaAcid }}
            </div>
            <div class="col-3">
                {% if hop.SBUrl is not empty %}
                <div class="d-inline shopping-notempty mr-2">
                    <a href="{{hop.SBUrl}}" target="_blank" title="Acheter sur Saveur Bière" ><img src="{{asset('build/layout/sb.jpg')}}" alt="Acheter du malt {{ hop.name }} sur Saveur Bière" /></a>
                </div>
                {% elseif hop.SBUrl is empty %}
                <div class="d-inline shopping-empty mr-2">
                    <img src="{{asset('build/layout/sb.jpg')}}" title="Indisponible sur Saveur Bière" />
                </div>
                {% endif %}
                    {% if hop.BLUrl is not empty %}
                <div class="d-inline shopping-notempty">
                    <a href="{{malt.BLUrl}}" target="_blank" title="Acheter sur Brouwland" ><img src="{{asset('build/layout/bl.png')}}" alt="Acheter du malt {{ hop.name }} sur Brouwland" /></a>
                </div>
                {% elseif hop.BLUrl is empty %}
                <div class="d-inline shopping-empty">
                    <img src="{{asset('build/layout/bl.png')}}" title="Indisponible sur Brouwland" />
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
        {% else %}
            <div class="alert alert-warning mt-4">
                <b>Rien à faire !</b> Personne n'a soumis de houblon.
            </div>
        {% endif %}
        </div>
        <div class="d-none d-lg-block col-2">
        {{ include('admin/components/side-menu.html.twig') }}
        </div>
</div>
{% endblock %}
